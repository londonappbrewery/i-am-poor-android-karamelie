<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    tools:context="com.londonappbrewery.iampoor.MainActivity">


    <ImageView
        android:id="@+id/BigCoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/coal" />

    <ImageView
        android:id="@+id/SmallCoal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/BigCoal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BigCoal"
        android:layout_centerHorizontal="true"
        android:text='"Diamonds are forever but coal keeps you warm"'
        android:textColor="@android:color/black"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Quote"
        android:layout_alignRight="@+id/Quote"
        android:layout_below="@+id/Quote"
        android:text="Philipp Muellauer"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>
